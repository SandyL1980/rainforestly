<h1>Products#show</h1>
<p>Find me in app/views/products/show.html.erb</p>

<h3><%= @product.name %> (<%= @product.formatted_price %>) (<%= @product.price_in_cents %>)</h3>
<h2><%= link_to "#{@product.description}", @product %>

<% if current_user %>

  <h3>Reviews</h3>

  <p>Reviews for <%= @product.name %></p>

  <% @product.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
        <em> by <%= review.user.email %></em>
        Added on: <%= review.created_at %>
      <% end %>
    </p>
  <% end %>

  <h4>New Review</h4>

  <%= render 'reviews' %>

<% else %>
  <p>Please <%= link_to "log in", new_session_path %> to add a review.</p>
<% end %>

